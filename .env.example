# bharat-courts configuration
# Copy to .env and adjust as needed

# Rate limiting: seconds between requests (be respectful to government servers)
BHARAT_COURTS_REQUEST_DELAY=1.0

# Request timeout in seconds
BHARAT_COURTS_TIMEOUT=30

# Max retries on failure
BHARAT_COURTS_MAX_RETRIES=3

# Log level (DEBUG, INFO, WARNING, ERROR)
BHARAT_COURTS_LOG_LEVEL=INFO
